// ========================================
// UPDATE STATISTICS FUNCTION
// Uses getElemenBytId() and getElementsByClassName()
// ========================================

function updateStats(){
    const allTask = document.getElementsByClassName('task-item');

    document.getElementById('totalTasks').textContent = allTask.length;

}





// ========================================
// EVENT LISTENERS
// ======================================== 
addBtnTask.addEventListener('click', addTasks);
